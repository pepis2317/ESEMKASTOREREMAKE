<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="150dp"
            android:background="@drawable/pfp_background"
            android:layout_height="150dp"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Name"/>
        <TextView
            android:id="@+id/email"
            android:textSize="21sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/baselineAssignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_assignment_ind_24"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/usernameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username          : "
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="myusername"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/baselineCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_calendar_month_24"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/birthdayTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday              : "
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99 Desember 9999"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/baselinePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_phone_24"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/phoneNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number : "
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/phoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08888888888"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/baselineLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/addressTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textSize="19sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. Jalur Sutera Bar. No.Kav. 21, RT.001/RW.004, Panunggangan, Kec. Pinang, Kota Tangerang, Banten 15143"
                    android:textSize="19sp"
                    android:layout_marginLeft="28dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/uploadphoto"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:text="Upload photo"
                android:textColor="#F8F8F8"
                app:cornerRadius="20dp"
                android:backgroundTint="#65BEBE"/>

            <Button
                android:id="@+id/editdata"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:text="Edit data"
                android:textColor="#F8F8F8"
                app:cornerRadius="20dp"
                android:backgroundTint="#65BEBE"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:text="Log Out"
                app:cornerRadius="10sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>